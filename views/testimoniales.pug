extends ../Layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes
        include ../layout/bloque_testimonios
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonio
                
                if(errores)
                    each error in errores   
                        .alert.col.alert-danger.text-center=error.mensaje
            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales", method='POST')
                        .from-group.mt-2
                            label(for='nombre') Nombre
                            input#nombre(type='text',placeholder='Nombre', name='nombre', class='form-control', value=nombre)
                        .from-group.mt-2 
                            label(for='correo') Correo
                            input#nombre(type='text',placeholder='correo', name='correo', class='form-control',value=correo)
                        .from-group.mt-2
                            label(for='mensaje') Mensaje
                            textarea#mensajes( placeholder='mensaje', name='mensaje', class='form-control', rows=3)= mensaje  

                        input.btn.btn-success.btn-block.mt-4(type="submit")          